<div id="content">
  <div class="shopify-section flex relative justify-center footer_bg">
    <div class="flex justify-center items-center mx-20 my-28 max-w-[1338px]">
      <div class="flex-1 justify-start items-center text-white">
        <div>
          {{ section.settings.logo | image_url: width: 120 | image_tag }}</div>
        <div class="mt-8 text-[14px] leading-normal mr-96 font-space">
          <p>*Statements made in this site have not been evaluated by the FDA. These products are not intended to diagnose, treat, cure, or prevent any disease.</p>
        </div>
      </div>
      <div class="flex-1 justify-start items-start flex flex-row text-white mt-5">
        <div class="flex-1 flex flex-col text-white ml-16">
          <div>
            <h4 class="text-white mb-8 font-space font-bold text-[18px]">Company</h4>
          </div>
          <div class="text-[14px] leading-normal">
            <p class="mb-6 font-space">Shop</p>
            <p class="mb-6 font-space">Oür Story</p>
            <p class="mb-6 font-space">The Science</p>
            <p class="font-space">Reviews</p>
          </div>
        </div>
        <div class="flex-1 flex flex-col text-white">
          <div>
            <h4 class="text-white mb-8 font-bold text-[18px]">Support</h4>
          </div>
          <div class="text-[14px] leading-normal">
            <p class="mb-6 font-space ">FAQ’s</p>
            <p class="mb-6 font-space ">Contact Üs</p>
            <p class="mb-6 font-space ">Return Policy</p>
            <p class=" font-space ">My Account</p>
          </div>
        </div>
        <div class="flex-1 flex flex-col text-white">
          <div>
            <h4 class="text-white mb-8 font-space font-bold text-[18px]">Legal</h4>
          </div>
          <div class="text-[14px] leading-normal font-space ">
            <p class="mb-6 font-space ">Privacy Policy</p>
            <p class="mb-6 font-space ">Terms Of Use</p>
            <p class=" font-space ">Accessibility</p>
          </div>
        </div>
        <div class="flex-1 flex flex-col text-white">
          <div>
            <h4 class="text-white mb-8 font-space font-bold text-[18px]">Social</h4>
          </div>
          <div class="text-[14px] leading-normal">
            <p class="mb-6  font-space ">Facebook</p>
            <p class=" font-space ">Instagram</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% style %}
  .footer_bg {
    background: {{ section.settings.footer-bg }}
  }
{% endstyle %}

{% schema %}
  {
    "name": "Footer Section",
    "settings": [
      {
        "type": "color",
        "id": "footer-bg",
        "label": "Background"
      }, {
        "type": "image_picker",
        "id": "logo",
        "label": "Footer Logo"
      }
    ],
    "presets": [
      {
        "name": "Footer Section",
        "category": "Text"
      }
    ]
  }
{% endschema %}
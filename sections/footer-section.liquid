<div id="content">
  <div class="shopify-section flex relative justify-center footer_bg">
    <div class="flex justify-center items-center mx-20 my-28 max-w-[1338px]">
      <div class="flex-1 justify-start items-center text-white">
        <div>
          {{ section.settings.logo | image_url: width: 120 | image_tag }}</div>
        <div class="mt-8 text-[14px] leading-normal mr-48">
          <p>*Statements made in this site have not been evaluated by the FDA. These products are not intended to diagnose, treat, cure, or prevent any disease.</p>
        </div>
      </div>
      <div class="flex-1 justify-start items-center flex flex-row text-white">
        <div class="flex-1 flex flex-col">
          <div>
            <h4>Company</h4>
          </div>
          <div class="text-[14px]leading-normal">
            <p>Shop</p>
            <p>Oür Story</p>
            <p>The Science</p>
            <p>Reviews</p>
          </div>
        </div>
        <div class="flex-1 flex flex-col">
          <div>
            <h4>Support</h4>
          </div>
          <div class="text-[14px] leading-normal">
            <p>FAQ’s</p>
            <p>Contact Üs</p>
            <p>Return Policy</p>
            <p>My Account</p>
          </div>
        </div>
        <div class="flex-1 flex flex-col">
          <div>
            <h4>Legal</h4>
          </div>
          <div class="text-[14px] leading-normal">
            <p>Privacy Policy</p>
            <p>Terms Of Use</p>
            <p>Accessibility</p>
          </div>
        </div>
        <div class="flex-1 flex flex-col">
          <div>
            <h4>Social</h4>
          </div>
          <div class="text-[14px] leading-normal">
            <p>Facebook</p>
            <p>Instagram</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% style %}
  .footer_bg {
    background: {{ section.settings.footer-bg }}
  }
{% endstyle %}

{% schema %}
  {
    "name": "Footer Section",
    "settings": [
      {
        "type": "color",
        "id": "footer-bg",
        "label": "Background"
      }, {
        "type": "image_picker",
        "id": "logo",
        "label": "Footer Logo"
      }
    ],
    "presets": [
      {
        "name": "Footer Section",
        "category": "Text"
      }
    ]
  }
{% endschema %}
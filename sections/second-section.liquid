<div id="content">
  {%- form 'product',
    product,
    id: product_form_id,
    class: 'form',
    novalidate: 'novalidate',
    data-type: 'add-to-cart-form'
  -%}
    <input
      type="hidden"
      name="id"
      value="{{ product.selected_or_first_available_variant.id }}"
      disabled
      class="product-variant-id"
    >
    <div class="product-form__buttons">
      {%- liquid
        assign check_against_inventory = true
        if product.selected_or_first_available_variant.inventory_management != 'shopify' or  product.selected_or_first_available_variant.inventory_policy == 'continue'
          assign check_against_inventory = false
        endif
        if product.selected_or_first_available_variant.quantity_rule.min > product.selected_or_first_available_variant.inventory_quantity and check_against_inventory
          assign quantity_rule_soldout = true
        endif
      -%}
      <button
        id = "ProductSubmitButton-{{ section_id }}"
        type="submit"
        name="add"
        class="text-white bg-soft-black rounded-[60px] h-[60px] w-full {% if block.settings.show_dynamic_checkout %}button--secondary{% else %}{% endif %}"
        {% if product.selected_or_first_available_variant.available == false or quantity_rule_soldout %}
          disabled
        {% endif %}
      >
        <span>
          {%- if product.selected_or_first_available_variant.available == false or quantity_rule_soldout -%}
            {{ 'products.product.sold_out' | t }}
          {%- else -%}
            {{ 'products.product.add_to_cart' | t }}
          {%- endif -%}
        </span>
        <div class="loading-overlay__spinner hidden">
          <svg
            aria-hidden="true"
            focusable="false"
            class="spinner"
            viewBox="0 0 66 66"
            xmlns="http://www.w3.org/2000/svg"
          >
            <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
          </svg>
        </div>
      </button>
      {%- if block.settings.show_dynamic_checkout -%}
        {{ form | payment_button }}
      {%- endif -%}
    </div>
  {%- endform -%}
  <div class="shopify-section flex justify-center items-center section2_bg font-moderat">
    <div class=" flex-row flex justify-between items-center relative w-full mx-28">
      {% if section.settings.thumb_1 != blank and section.settings.img_desc_1 != blank %}
        <div class="flex flex-col items-center justify-center my-32 w-1/5">
          <div class="flex">
            {{ section.settings.thumb_1 | image_url: width: 60 | image_tag }}
          </div>
          <div class="flex">
            {{ section.settings.img_desc_1 }}
          </div>
        </div>
      {% endif %}
      {% if section.settings.thumb_2 != blank and section.settings.img_desc_2 != blank %}
        <div class="flex flex-col items-center justify-center w-1/5 my-32">
          <div class="flex">
            {{ section.settings.thumb_2 | image_url: width: 60 | image_tag }}
          </div>
          <div class="flex">
            {{ section.settings.img_desc_2 }}
          </div>
        </div>
      {% endif %}
      {% if section.settings.thumb_3 != blank and section.settings.img_desc_3 != blank %}
        <div class="flex flex-col items-center justify-center w-1/5 my-32">
          <div class="flex">
            {{ section.settings.thumb_3 | image_url: width: 60 | image_tag }}
          </div>
          <div class="flex">
            {{ section.settings.img_desc_3 }}
          </div>
        </div>
      {% endif %}
      {% if section.settings.thumb_4 != blank and section.settings.img_desc_4 != blank %}
        <div class="flex flex-col items-center justify-center w-1/5 my-32">
          <div class="flex">
            {{ section.settings.thumb_4 | image_url: width: 60 | image_tag }}
          </div>
          <div class="flex">
            {{ section.settings.img_desc_4 }}
          </div>
        </div>
      {% endif %}
      {% if section.settings.thumb_5 != blank and section.settings.img_desc_5 != blank %}
        <div class="flex flex-col items-center justify-center w-1/5 my-32">
          <div class="flex">
            {{ section.settings.thumb_5 | image_url: width: 60 | image_tag }}
          </div>
          <div class="flex">
            {{ section.settings.img_desc_5 }}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>
{% style %}
  .section2_bg {
    background: {{ section.settings.bg2}}
  }
{% endstyle %}



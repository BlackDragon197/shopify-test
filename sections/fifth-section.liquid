<div id="content">
  <div class="shopify-section flex relative justify-center section5_bg font-moderat">
    <div class="flex flex-row max-w-[1240px] relative justify-center items-center my-24">
      <div class="flex flex-row justify-start items-start flex-1">
        <div class="mr-14">
          {{ section.settings.img_1 | image_url: width: 201 | image_tag }}
        </div>
        <div class="">
          {{ section.settings.img_2 | image_url: width: 201 | image_tag }}
        </div>
      </div>
      <div class="flex flex-col ml-32 flex-1">
        <h2 class="font-bold text-[7rem] leading-none">
          {{ section.settings.heading }}
        </h2>
        <p class="mt-7 text-[18px] leading-normal tracking-wide">
          {{ section.settings.heading_desc }}
        </p>
      </div>
    </div>
  </div>
</div>
{% style %}
  .section5_bg {
    background: {{ section.settings.bg5 }}
  }
{% endstyle %}

{% schema %}
  {
    "name": "Fifth Section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "heading_desc",
        "label": "Heading description"
      },
      {
        "type": "image_picker",
        "id": "img_1",
        "label": "Image 1"
      },
      {
        "type": "image_picker",
        "id": "img_2",
        "label": "Image 2"
      }, {
        "type": "color",
        "id": "bg5",
        "label": "Background"
      }
    ],
    "presets": [
      {
        "name": "Fifth Section",
        "category": "Text"
      }
    ]
  }
{% endschema %}